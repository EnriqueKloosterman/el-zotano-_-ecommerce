    <h1>que hay de nuevo viejo?!</h1>
    
    <section class="container">
        <h2 class="text-center">Novedades</h2>
        <div class="product-container row g-2">
            <% for( let i = 0; i < newArrivals.length; i++ ) { %>
                <div class="product-container col-md-6 col-lg-3">
                    <a href="products/product-detail/<%= newArrivals[i].id %> " class="text-decoration-none">
                        <img src="img/products/<%= newArrivals[i].image[0].name %>" alt="" width="80%">
