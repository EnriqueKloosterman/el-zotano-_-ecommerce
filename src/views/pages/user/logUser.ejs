<%- include('../../partials/head')  %>
<section class="container-fluid d-flex justify-content-center">
    <form action="/user/login" method="post" class="row g-2 col-md-10 col-lg-8 ">
        <div class="col-12">
            <label for="email" id="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control">
        </div>
        <div class="col-12">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password"  id="password" class="form-control">
        </div>
        <div class="mb-3 col-8">
            <input type="checkbox" name="rememberUser" id="rememberUser">
            <label for="rememberUser">seguir logueado</label>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <button class="btn btn-success">
                Ingresar
            </button>
        </div>
    </form>
</section>