<%- include('../../partials/head')  %>
<%- include('../../partials/header')  %>

    <body>
        <section class="container-md justify-content-center">
            <h1>EDICION DE: </h1>
            <h3><%= productToEdit.name %></h3>
    
                <% if (productToEdit.image.length > 0) { %>
                    <img src="/img/products/<%= productToEdit.image[0].name%> " alt="" height="300px">
                <% } else { %>
                    <img src="/img/nami.jpg" alt="" height="300px">
                <% } %>

    
            <form action="/admin/<%= productToEdit.id %>" method="POST" enctype="multipart/form-data"  class="row g-4">
                <div class="col-md-12">
                    <label for="name" class="form-label">Nombre del producto</label>
                    <input type="text" name="name" id="name" class="form-control" value="<%= productToEdit.name %>">
                </div>
                <div class="col-6">
                    <label for="price" class="form-label">Precio</label>
                    <input type="number" name="price" id="price" class="form-control"  value="<%= productToEdit.price %>">
                </div>
                <div class="col-6">
                    <label for="discount" class="form-label">Descuento</label>
                    <input type="number" name="discount" id="discount" class="form-control"  value="<%= productToEdit.discount %>">
                </div>
                <div class="col-md-4 d-block">
                    <select name="manufactorer" id="manufactorer" class="form-select">
                        <option value="" disabled selected>Fabricante</option>
                        <% for(manufactorer of manufactorerDB) { %>
                            <option value="<%= manufactorer.id %>"><%= manufactorer.name %></option> <% } %> 
                    </select>
                    
                </div>
                <div class="col-md-4">
                    <select name="brand" id="brand" class="form-select">
                        <option value="" disabled selected>Marca</option>
                        <% for(brand of brandDB) { %>
                            <option value="<%= brand.id %>"><%= brand.name %></option> <% } %> 
                    </select>
                </div>
                <div class="col-md-4">
                    <select name="tag" id="tag" class="form-select">
                        <option value="" disabled selected>Categoria</option>
                        <% for(tag of tagDB) { %>
                            <option value="<%= tag.id %>"><%= tag.name %></option> <% } %> 
                    </select>

                </div>

                <div class="col-md-12">
                    <% if (productToEdit.description.length > 0) { %>
                        <label for="description" class="form-label">Descripción del producto</label>
                        <% for( let i = 0; i < productToEdit.description.length; i++ ) { %>
                            <textarea name="description" id="description" cols="30" rows="3" class="form-control mb-1" value=""><%= productToEdit.description[i].description %></textarea> 
                        <% } %>
                    <% }  else {%>
                        <div class="col-md-12">
                            <label for="description" class="form-label">Descripción del producto</label>
                            <div class="descriptionList">
                                <div class="descriptionInput mb-1">
                                    <textarea name="description" id="description" cols="30" rows="5" class="form-control mb-1" value="<%= productToEdit.description %>"></textarea> 
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
                <div class="col-3">
                    <button type="button" class="btn btn-dark" id="addDescriptionBtn">Agregar parrafo</button>
                </div>


                <div class="col-md-12">
                    <% if (productToEdit.details.length > 0) { %>
                        <label for="detail" class="form-label">Detalles del producto</label>
                        <% for( let i = 0; i < productToEdit.details.length; i++ ) { %>
                            <div class="detailList">
                                <div class=" detailInput mb-1" id="">
                                    <input type="text" name="detail" id="detail" class="form-control" value="<%= productToEdit.details[i].detail%>">
                                </div>
                            </div>                        
                        <% } %>
                    <% } else { %>
                        <label for="detail" class="form-label">Detalles del producto</label>
                        <div class="detailList">
                            <div class=" detailInput mb-1" id="">
                                <input type="text" name="detail" id="detail" class="form-control">
                            </div>
                        </div>
                    
                    <% }  %>
                     
                </div>
                <div class="col-3">
                    <button type="button" class="btn btn-dark" id="addDetailBtn">Agregar detalle</button>
                </div>
                <div class="col-md-12">
                    <label for="image">
                        <input type="file" name="image" id="image" accept="image/*" class="form-control" multiple>
                    </label>
                </div>
        
                <div class="col-md-12 form-btn d-flex justify-content-around mt-5">
                    <button type="submit" class="btn btn-success">Editar producto</button>
                    <button type="reset" class="btn btn-danger">Borrar formulario</button>
                </div>
            </form>
        </section>        
    </body>





<script src="<%= script %> "></script>
<%- include('../../partials/footer')  %>