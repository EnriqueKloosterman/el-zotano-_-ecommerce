<%- include('../../partials/head') %> 
<%- include('../../partials/header') %>

<div class="container">
  <h2>listado de productos a editar</h2>
  <% for(product of product) { %>
    <ul class="list-group">
      <li class="list-group-item">
        <a href="edit-product/<%= product.id %>" class="row d-flex justify-content-arround text-decoration-none">
          <div class="col-2 d-flex justify-content-center">
            <% if (product.image.length > 0) { %>
            <img src="/img/products/<%= product.image[0].name %>" alt="" height="80">
            <% } else { %>
              <img src="/img/nami.jpg" alt="" height="80px">
            <% } %>
          </div>
          <h5 class="text-center col-10"><%= product.name %></h5>
        </a>
      </li>
    </ul>
    <% } %>
</div>


<!--!   ******  PAGINACIÓN  ******   -->
<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <% if (page > 0) { %>
      <li class="page-item"><a class="page-link" href="product-list?page=<%= page - 1%>&size=10">Anterior</a></li>
    <% } %>
    <% for (let i=0; i < totalPages; i++){ %>
      <li class="page-item"><a class="page-link" href="product-list?page=<%= i %>&size=10"><%= i + 1%></a></li>
    <% } %>
    <% if (page < totalPages - 1) { %>
      <li class="page-item"><a class="page-link" href="product-list?page=<%= page + 1%>&size=10">Siguiente</a></li>           
    <% } %>
  </ul>
</nav>
